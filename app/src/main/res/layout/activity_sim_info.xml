<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".SimInfoActivity">

    <TextView
        android:layout_width="match_parent"
        android:hint="是否有read_phone_state权限?"
        android:id="@+id/tv_has_read_phone_permission"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="match_parent"
        android:text="申请权限"
        android:id="@+id/btn_request_permission"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:text="获取信息"
        android:id="@+id/btn_getinfo"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:hint="getSubscribeId"
        android:id="@+id/tv_get_subscribeId"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:hint="所属运营商"
        android:id="@+id/tv_operatorname"
        android:layout_height="wrap_content" />


</LinearLayout>